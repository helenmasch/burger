<div class="container">
    <div class="row">
        <div class="col-sm-4">
            {{#each burgers}}
            {{#unless devoured}}
            <p> {{ burger_name }} <button data-id={{id}} class="devoured"> devoured </button></p>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-sm-4">


            <h1>Eat The Burger</h1>

            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>

            <h2>Enter the name of the burger you want to eat and click submit </h2>
        </div>
        <div class="col-sm-4">

            {{#each burgers}}
            {{#if devoured}}
            <p> {{burger_name }} </p>
            {{/if}}
            {{/each}}
        </div>
    </div>


</div>